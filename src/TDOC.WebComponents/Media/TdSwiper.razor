@using TDOC.Common.Data.Models.Media

@if (EntryDataList.Count > 0)
{
    <!-- Slider main container -->
    <div class="swiper swiper-@SwiperId w-100 @extraSwiperCssClass">
        <!-- Additional required wrapper -->
        <div class="swiper-wrapper">
        <!-- Slides -->
        @foreach(MediaEntryData entry in EntryDataList)
        {
            <div class="swiper-slide align-items-center d-flex justify-content-center" style="@GetSlideStyle()">
                <img class="@GetImageCssClass()"
                     src="@GetImageSrc(IsThumbnail ? entry.Thumbnail : entry.Image)" 
                     @onclick="OnSlideClick" 
                     @ondblclick="OnSlideDblClick" />
            </div>
        }
        </div>
        @*<!-- If we need pagination -->
        <div class="swiper-pagination swiper-pagination-@SwiperId"></div>*@
      
        <!-- If we need navigation buttons -->
        <div class="swiper-button-prev swiper-button-prev-@SwiperId"></div>
        <div class="swiper-button-next swiper-button-next-@SwiperId"></div>
    </div>
}