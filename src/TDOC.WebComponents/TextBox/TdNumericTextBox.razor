<DxSpinEdit T="int?"
            Enabled="Enabled"
            BindValueMode="BindValueMode.OnInput"
            Value="Value"
            ValueChanged="ValueChanged"
            MinValue="MinValue"
            MaxValue="MaxValue"
            Id="@($"numericTextBox{Identifier}")"
            NullText="@NullText"
            ShowSpinButtons="SpinButtonsVisible"
            AllowMouseWheel="false"
            InputCssClass="@($"td-textbox-input {@CssClass}")"
            style="@($"width: {Width}px")"
            @onkeyup="OnKeyUp"
            @oninput="((args) => InputChanged(args))" />